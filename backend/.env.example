# Deployment Mode
MODE=offline  # offline or online

# Database Configuration
# For OFFLINE mode (SQLite)
SQLITE_DATABASE_URL=sqlite+aiosqlite:///./data/radiantai.db

# For ONLINE mode (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=radiantai
POSTGRES_USER=radiantai_user
POSTGRES_PASSWORD=changeme

# MedGemma Configuration
# For OFFLINE mode
MEDGEMMA_MODEL_PATH=./models/medgemma-1.5
MEDGEMMA_DEVICE=cuda  # cuda or cpu
MEDGEMMA_QUANTIZATION=4bit  # 4bit, 8bit, or none

# For ONLINE mode
MEDGEMMA_API_ENDPOINT=https://api.medgemma.example.com/v1/inference
MEDGEMMA_API_KEY=your-api-key-here

# Storage Configuration
# For OFFLINE mode
STORAGE_TYPE=local  # local, s3, or azure
LOCAL_STORAGE_PATH=./data/storage

# For ONLINE mode (S3)
S3_BUCKET=radiantai-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# For ONLINE mode (Azure)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=radiantai-storage

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# Application Settings
APP_NAME="RadiantAI"
APP_VERSION="1.0.0"
DEBUG=false
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# File Processing
MAX_UPLOAD_SIZE=5368709120  # 5GB
TEMP_UPLOAD_DIR=./data/uploads
VOLUME_CACHE_DIR=./data/volumes

# Integration Settings
PACS_AE_TITLE=RADIANTAI
PACS_PORT=11112
DICOM_STORAGE_AE_TITLE=RADIANTAI_STORE

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/radiantai.log

# Feature Flags
ENABLE_PACS_INTEGRATION=false
ENABLE_RIS_INTEGRATION=false
ENABLE_FHIR_INTEGRATION=false
ENABLE_OFFLINE_SYNC=true
