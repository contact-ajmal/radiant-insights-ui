# RadiantAI Local Development Configuration

# Deployment Mode (offline for local development)
MODE=offline

# Database Configuration (SQLite for offline mode)
SQLITE_DATABASE_URL=sqlite+aiosqlite:///./data/radiantai.db

# MedGemma Configuration (Mock mode for local dev - will simulate responses)
MEDGEMMA_MODEL_PATH=./models/medgemma-1.5
MEDGEMMA_DEVICE=cpu
MEDGEMMA_QUANTIZATION=none

# Storage Configuration
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./data/storage

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Application Settings
APP_NAME=RadiantAI
APP_VERSION=1.0.0
DEBUG=true
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173

# File Processing
MAX_UPLOAD_SIZE=5368709120
TEMP_UPLOAD_DIR=./data/uploads
VOLUME_CACHE_DIR=./data/volumes

# Integration Settings (disabled for local dev)
ENABLE_PACS_INTEGRATION=false
ENABLE_RIS_INTEGRATION=false
ENABLE_FHIR_INTEGRATION=false
ENABLE_OFFLINE_SYNC=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/radiantai.log
